<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.virtualbovapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_virtualbov_round"
        android:usesCleartextTraffic="true"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_virtualbov_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="br.com.virtualbovapp.activities.MainActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="stateHidden">

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />

            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="br.com.virtualbovapp.activities.cadastros.CadastroAnimalActivity"
            android:label="Animal"
            android:theme="@style/ChipTheme"
            android:windowSoftInputMode="stateHidden"/>

        <activity
            android:name="br.com.virtualbovapp.activities.cadastros.CadastroRacaActivity"
            android:label="Raça"
            android:windowSoftInputMode="stateHidden"/>

        <activity
            android:name="br.com.virtualbovapp.activities.consultas.ConsultaCadastroRacaActivity"
            android:label="Lista de Raças"
            android:windowSoftInputMode="stateHidden"/>

        <activity
            android:name="br.com.virtualbovapp.activities.consultas.ConsultaCadastroAnimalActivity"
            android:label="Lista de Animais"
            android:windowSoftInputMode="stateHidden"/>

        <activity
            android:name="br.com.virtualbovapp.activities.consultas.ConsultaCadastroLocalActivity"
            android:label="Lista de Locais"
            android:windowSoftInputMode="stateHidden"/>

        <activity
            android:name="br.com.virtualbovapp.activities.cadastros.CadastroLocalActivity"
            android:label="Local"
            android:windowSoftInputMode="stateHidden"/>

        <activity
            android:name="br.com.virtualbovapp.activities.consultas.ConsultaCadastroEstrategiaActivity"
            android:label="Lista de Estratégias"
            android:windowSoftInputMode="stateHidden"/>

        <activity
            android:name="br.com.virtualbovapp.activities.cadastros.CadastroEstrategiaActivity"
            android:label="Estratégia"
            android:windowSoftInputMode="stateHidden"/>

        <activity
            android:name="br.com.virtualbovapp.activities.consultas.ConsultaCadastroLoteActivity"
            android:label="Lista de Lotes"
            android:windowSoftInputMode="stateHidden"/>

        <activity
            android:name="br.com.virtualbovapp.activities.cadastros.CadastroLoteActivity"
            android:label="Lote"
            android:windowSoftInputMode="stateHidden"/>

        <activity
            android:name="br.com.virtualbovapp.activities.consultas.ConsultaCadastroVacinaActivity"
            android:label="Lista de Vacinas"
            android:windowSoftInputMode="stateHidden"/>

        <activity
            android:name="br.com.virtualbovapp.activities.cadastros.CadastroVacinaActivity"
            android:label="Vacina"
            android:windowSoftInputMode="stateHidden"/>

        <activity
            android:name="br.com.virtualbovapp.activities.consultas.ConsultaCadastroMedicamentoActivity"
            android:label="Lista de Medicamentos"
            android:windowSoftInputMode="stateHidden"/>

        <activity
            android:name="br.com.virtualbovapp.activities.cadastros.CadastroMedicamentoActivity"
            android:label="Medicamento"
            android:windowSoftInputMode="stateHidden"/>

        <activity
            android:name="br.com.virtualbovapp.activities.consultas.ConsultaCadastroProtocoloSanitarioActivity"
            android:label="Lista de Protocolos Sanitários"
            android:windowSoftInputMode="stateHidden"/>

        <activity
            android:name="br.com.virtualbovapp.activities.cadastros.CadastroProtocoloSanitarioActivity"
            android:label="Protocolo Sanitário"
            android:windowSoftInputMode="stateHidden"/>
    </application>
</manifest>