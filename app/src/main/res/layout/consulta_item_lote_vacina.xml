<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/view_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_row_background">

        <ImageView
            android:id="@+id/delete_icon"
            android:layout_width="@dimen/ic_delete"
            android:layout_height="@dimen/ic_delete"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/padd_10"
            android:src="@drawable/ic_action_delete" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/padd_10"
            android:layout_toLeftOf="@id/delete_icon"
            android:text="EXCLUIR"
            android:textColor="#fff"
            android:textSize="13dp" />
    </RelativeLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/view_foreground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/tv_numero_lote_vacina"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NÃšMERO DO LOTE"
                android:textStyle="bold"
                android:textColor="#5A6978"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerVertical="true">

                <TextView
                    android:id="@+id/tv_title_data_fabricacao_lote_vacina"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fab.: "
                    android:textStyle="bold"
                    android:textColor="#5A6978"
                    android:layout_marginTop="3dp"/>

                <TextView
                    android:id="@+id/tv_data_fabricacao_lote_vacina"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10/01/2020"
                    android:textColor="#5A6978"
                    android:layout_marginTop="3dp"/>

                <TextView
                    android:id="@+id/tv_title_data_validade_lote_vacina"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Val.: "
                    android:textStyle="bold"
                    android:textColor="#5A6978"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="20dp"/>

                <TextView
                    android:id="@+id/tv_data_validade_lote_vacina"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="31/12/2020"
                    android:textColor="#5A6978"
                    android:layout_marginTop="3dp"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>